<Window x:Class="CYK_Project.MainWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:local="clr-namespace:CYK_Project"
            mc:Ignorable="d"
            Title="MainWindow" Height="500" Width="875" ResizeMode="NoResize" AllowsTransparency="True"
            WindowStartupLocation="CenterScreen" WindowStyle="None" Background="Transparent"
            >














    <Border Background="White" CornerRadius="40" >




        <Grid RenderTransformOrigin="0.5,0.5" Margin="2,0,0,2"   >
