                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.048"/>
                    <TranslateTransform X="0"/>
                </TransformGroup>
            </Grid.RenderTransform>
            <Grid Margin="-4,118,420,90" Height="290" >
                <Border Background="#03bf69" CornerRadius="30" Margin="81,0,71,0">
                    <TextBox HorizontalAlignment="Center" FontSize="18" TextWrapping="Wrap"  VerticalAlignment="Center" Width="273" RenderTransformOrigin="0.5,0.5" Height="258" Name="Inputgrammer_TB" 
                             AcceptsReturn="True" >

